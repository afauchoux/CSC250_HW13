<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adamfauchoux.csc250_hw13.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/page2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNextPageButtonPressed"
            android:text="Goto Page 2" />

        <Button
            android:id="@+id/page3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onNextPageButtonPressed"
            android:text="Goto Page 3" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
